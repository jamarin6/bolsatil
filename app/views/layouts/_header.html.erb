      for (var i = 0; i < data.length; i++) {
        last_ticks.push(data[i].buy);
      }
      //setTimeout(function(){pinta_charts(last_ticks)},3000)
      pinta_charts(last_ticks);
    });
    function pinta_charts(ticks) {
      $('#btc_chart').highcharts({
          chart: {
              type: 'areaspline'
          },
          title: {
              text: false
          },
          legend: {
              layout: 'vertical',
              align: 'left',
              verticalAlign: 'top',
              x: 150,
              y: 100,
              floating: true,
              borderWidth: 1,
              backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
          },
          xAxis: {
              categories: false,
              plotBands: [{ // visualize the weekend
                  from: 4.5,
                  to: 6.5,
                  color: 'rgba(68, 170, 213, .2)'
              }]
          },
          yAxis: {
              title: {
                  text: false
              }
          },
          tooltip: {
              shared: true,
              valueSuffix: ' $'
          },
          credits: {
              enabled: false
          },
          plotOptions: {
              areaspline: {
                  fillOpacity: 0.5
              }
          },
          series: [{
              name: 'Dollars',


                data: ticks
                      }, {
              name: 'Euros',
